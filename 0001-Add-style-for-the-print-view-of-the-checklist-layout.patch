+++ b/src/applications/static-pages/sass/static-pages.scss
@@ -22,6 +22,8 @@ $formation-image-path: "~@department-of-veterans-affairs/formation/assets/img";
 @import "modules/m-facilities";
 @import "modules/m-facility-events";
 
