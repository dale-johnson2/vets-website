---
 .../static-pages/sass/modules/_m-checklist-layout.scss     | 7 +++++++
 src/applications/static-pages/sass/static-pages.scss       | 2 ++
 src/site/layouts/checklist.drupal.liquid                   | 4 ++--
 3 files changed, 11 insertions(+), 2 deletions(-)
 create mode 100644 src/applications/static-pages/sass/modules/_m-checklist-layout.scss

diff --git a/src/applications/static-pages/sass/modules/_m-checklist-layout.scss b/src/applications/static-pages/sass/modules/_m-checklist-layout.scss
new file mode 100644
index 0000000000..c94c4fea34
--- /dev/null
+++ b/src/applications/static-pages/sass/modules/_m-checklist-layout.scss
@@ -0,0 +1,7 @@
+.va-l-detail-page--checklist {
+  @media print {
+    #resources-search-bar-wrapper {
+      display: none;
+    }
+  }
+}
diff --git a/src/applications/static-pages/sass/static-pages.scss b/src/applications/static-pages/sass/static-pages.scss
index 0006f90e80..fcfe3d27fc 100644
